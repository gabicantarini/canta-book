@model Canta_Book.Models.Book
@{
    ViewData["Title"] = "Edit";
    List<Author>? lAuthor = ViewData["lAuthor"] as List<Author>;
}

<h1>Edit</h1>

<form action="/Books/Edit" method="post">
    <input asp-for="Description" class="form-control" required />
    <input asp-for="Genre" class="form-control" required />
    <input asp-for="BookTitle" class="form-control" required />
    <input asp-for="BookID" class="form-control" required hidden />


    @if (lAuthor != null)
    {
        <select asp-for="AuthorID" class="form-control" required>
            @{
                <option value="">Selecione ...</option>
                foreach (var item in lAuthor)
                {
                    <option value="@item.AuthorID">@item.AuthorName</option>
                }
            }
        </select>
    }
    else
    {
        <span>
            Não existem autores registados.
        </span>
    }





    <button type="submit" class="btn btn-success">
        gravar
    </button>
</form>