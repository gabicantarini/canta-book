            <button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "BookReaders")'">Community</button>
        </div>
    </div>
    <div class="card">
        @* <img class="card-img-top" src=".../100px180/" alt="Card image cap"> *@
