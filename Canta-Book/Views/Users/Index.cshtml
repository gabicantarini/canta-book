@model IEnumerable<Canta_Book.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Relação de Usuários</h1>

<p>
    <a asp-action="ManageUsers">Gerenciamento de Usuários</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Usuário
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index">Voltar</a>
